<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - My Site</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
            color: #333;
        }

        header {
            background-color: #8B0000;
            padding: 1rem 2rem;
            color: white;
        }

        nav ul {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            gap: 2rem;
        }

        nav a {
            color: white;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s;
        }

            nav a:hover {
                color: #ffdddd;
            }

        .container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        footer {
            background-color: #222;
            color: #aaa;
            text-align: center;
            padding: 1rem 0;
            margin-top: 2rem;
        }
    </style>
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">Nagy</a></li>
                <li><a href="#">Etc</a></li>
                <li><a href="#">Var</a></li>
            </ul>
        </nav>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <footer>
        &copy; @DateTime.Now.Year - My Awesome Site
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
